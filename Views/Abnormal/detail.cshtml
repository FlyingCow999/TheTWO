
@{
    ViewData["Title"] = "detail";
}

<h3>回单详情</h3>
<div id="app">
    <div v-for="item in bodys">
        <h4>运单信息</h4>
        <table class="table table-bordered">
            <tr>
                <td>订单号</td>
                <td>计划装货时间</td>
                <td>计划到货时间</td>
                <td>始发地</td>
                <td>目的地</td>
                <td>委托方</td>
                <td>委托人</td>
                <td>联系电话</td>
                <td>详细地址</td>
                <td>收货方</td>
                <td>收货人</td>
                <td>联系电话</td>
                <td>收货地址</td>
                <td>货名</td>
                <td>规格型号</td>
                <td>总包装</td>
                <td>总数量</td>
                <td>总重量</td>
                <td>提货联系人</td>
                <td>联系电话</td>
                <td>提货地址</td>
                <td>订单备注</td>
            </tr>
            <tr>
                <td>{{item.if_Number}}</td>
                <td>{{item.if_PlanBCarTime}}</td>
                <td>{{item.if_PlanArrivalTime}}</td>
                <td>{{item.if_BeginPlace}}</td>
                <td>{{item.if_EndPlace}}</td>
                <td>{{item.e_Company}}</td>
                <td>{{item.e_Person}}</td>
                <td>{{item.e_Phone}}</td>
                <td>{{item.e_Address}}</td>
                <td>{{item.co_Company}}</td>
                <td>{{item.co_Person}}</td>
                <td>{{item.co_Phone}}</td>
                <td>{{item.co_Address}}</td>
                <td>{{item.if_Goods}}</td>
                <td>{{item.if_Specification}}</td>
                <td>{{item.if_TotalPackage}}</td>
                <td>{{item.if_Num}}</td>
                <td>{{item.if_AllWeight}}</td>
                <td>{{item.e_AddPerson}}</td>
                <td>{{item.e_AddPhone}}</td>
                <td>{{item.e_Address}}</td>
                <td>{{item.if_Remark}}</td>
            </tr>
        </table>
        <table class="table table-bordered">
            <tr>
                <td>签收人</td>
                <td>签收时间</td>
                <td>货到状态</td>
            </tr>
            <tr>
                <td>{{item.a_Signer}}</td>
                <td>{{item.a_Signing}}</td>
                <td>{{item.a_Explain}}</td>
            </tr>
        </table>
        <h5>实际货物信息</h5>
        <table class="table table-bordered">
            <tr>
                <td>货名</td>
                <td>规则型号</td>
                <td>总数量</td>
                <td>总重量kg</td>
            </tr>
            <tr>
                <td>{{item.r_Article}}</td>
                <td>{{item.r_Spec}}</td>
                <td>{{item.r_Number}}</td>
                <td>{{item.r_Weight}}</td>
            </tr>
        </table>
        <table>
            <tr>
                <td>
                    回单备注
                </td>
            </tr>
            <tr>
                <td>
                    <textarea id="fa" rows="3" cols="30">{{item.a_Remarks}}</textarea>
                </td>
            </tr>
        </table>
        <button type="button" class="layui-btn" v-on:click="back()">返回</button>
    </div>
</div>
<script>
    //module
    var data = {
        bodys:"",
    };

    //ViewModel
    new Vue({
        el: "#app",
        data,
        mounted: function () {
            this.select();//调用select方法     反填订单的所有信息
        },
        methods: {
            select() {
                axios({
                    method: "get",
                    url: "http://localhost:57030/api/Abnormal/GetAllAbnormalList?code=" +@ViewBag.id,
                }).then(res => {
                    console.log(res.data);
                    this.bodys = res.data
                })
            },
            back() {
                location.href = "/Abnormal/show";
            }
            }
        })
</script>
